<body>
<metal:content-core fill-slot="content-core">
<metal:block define-macro="content-core">
    <?python
        from DateTime import DateTime
    ?>
    <p><span class="datepicker">開始日期:
        <input type="date" class="start-date" name="start_date" value="${python:DateTime().year()}-01-01"/>
        </span>
        結束日期:
        <input type="date" class="end-date" name="end_date" value="${python:DateTime().year()}-12-31"/>
    </p>
    <button class="ga_send">送出</button>

    <div class="chart"> <!-- Line Chart 在這 -->
            <div id="ga_chart"/>
    </div>

    <script src="${portal_url}/++plone++MarieClaire.content/ga.js"></script>
