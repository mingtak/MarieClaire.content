<html xmlns="http://www.w3.org/1999/xhtml"
      xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="MarieClaire.content">

<metal:styleslot fill-slot="style_slot">
    <link rel="stylesheet" href="${portal_url}/++plone++MarieClaire.content/custom.css" />
</metal:styleslot>
<metal:jsslot fill-slot="javascript_head_slot">
</metal:jsslot>


<body>
<metal:content-core fill-slot="content-core">
<metal:block define-macro="content-core">

<h2>客戶報表管理</h2>
<a href="${context/absolute_url}/custom_report" target="_blank">查看報表</a>
<div class="table">
    <div class="row header">
        <div class="col-md-2">訂單ID</div>
        <div class="col-md-5">訂單名稱</div>
        <div class="col-md-2">本檔績效(Clicks / Impressions)</div>
        <div class="col-md-3">加權(Clicks / Impressions)</div>
    </div>
    <div tal:repeat="item view/orderIds" class="row record">
        <div>
            <div class="col-md-2 order_block">${item}</div>
            <div class="col-md-5 order_block">${python:view.orderData[item]['ORDER_NAME']}</div>
            <div class="col-md-2 order_block">
                ${python:view.orderData[item]['AD_SERVER_CLICKS']} / ${python:view.orderData[item]['AD_SERVER_IMPRESSIONS']}
            </div>
            <div class="col-md-3 last order_block">
                <input class="weight" data-order_id="${item}" data-name="cli_weight"
                    type="number" step="0.1" placeholder="群組變更"> / 
                <input class="weight" data-order_id="${item}" data-name="im_weight"
                    type="number" step="0.1" placeholder="群組變更">
            </div>
        </div>
        <tal:repeat define="line_item_data python:view.getLineItem(item)" 
                        repeat="line_item line_item_data">
            <div>
                <div class="col-md-2">${python:line_item}</div>
                <div class="col-md-5">${python:line_item_data[line_item]['LINE_ITEM_NAME']}</div>
                <div class="col-md-2">
                    ${python:line_item_data[line_item]['AD_SERVER_CLICKS']}/${python:line_item_data[line_item]['AD_SERVER_IMPRESSIONS']}
                </div>
                <div class="col-md-3 last">
                    <input class="line_item_weight" data-line_item_id="${line_item}" data-name="cli_weight"
                        type="number" step="0.1" value="${python:line_item_data[line_item]['cli_weight']}"> / 
                    <input class="line_item_weight" data-line_item_id="${line_item}" data-name="im_weight"
                        type="number" step="0.1" value="${python:line_item_data[line_item]['im_weight']}">
                </div>
            </div>
        </tal:repeat>
    </div>
</div>


<script>
// post
updateWeight = function(update_id, weight_name, weight, update_type){
    url = window.location.href.replace('custom_edit', '@@update_weight')

    data = {
        update_id: update_id,
        weight_name: weight_name,
        weight: weight,
        update_type:update_type
    }

    $.post(
        url,
        data = data,
    ).done(function(value){
        alert(value)
        window.location = window.location.href 
    }).fail(function(){
        alert('Fail')
    })
}


// update weight
$(document).ready(function(){
    $('.weight').change(function(){
        update_type="order"
        update_id = $(this).data('order_id')
        weight_name = $(this).data('name')
        weight = $(this).val()
        updateWeight(update_id, weight_name, weight, update_type)
    })
    $('.line_item_weight').change(function(){
        update_type="line_item"
        update_id = $(this).data('line_item_id')
        weight_name = $(this).data('name')
        weight = $(this).val()
        debugger
        updateWeight(update_id, weight_name, weight, update_type)
    })
})
</script>


</metal:block>
</metal:content-core>

</body>
</html>

