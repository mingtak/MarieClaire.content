<html xmlns="http://www.w3.org/1999/xhtml"
      xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="MarieClaire.content">

<metal:styleslot fill-slot="style_slot">
    <link rel="stylesheet" href="${portal_url}/++plone++MarieClaire.content/custom.css" />
</metal:styleslot>
<metal:jsslot fill-slot="javascript_head_slot">
</metal:jsslot>


<body>
<metal:content-core fill-slot="content-core">
<metal:block define-macro="content-core">
<?python
    from plone import api
    roles = api.user.get_roles()
    current = api.user.get_current().getUserName()
    if current == 'admin':
        identified = True
        brain = api.content.find(Type='Custom', sort_on='created', sort_order='reverse')
    else:
        identified = False
?>
<h2>客戶管理列表</h2>
<div class="table">
    <div class="row">
        <div class="col-md-1">編號</div>
        <div class="col-md-5">標題</div>
        <div class="col-md-6">行動</div>
    </div>
    <div tal:condition="not:identified"
         tal:repeat="item python:view.getCustomList()" class="row">
        <div class="col-md-1">${repeat/item/number}</div>
        <div class="col-md-5">${item/title}</div>
        <div class="col-md-6" tal:define="url item/url">
            <a href="${python:'%s/custom_edit' % url}">DFP Edit</a>
            <a href="${python:'%s/custom_report' % url}">DFP Report</a>
            <a href="${python:'%s/ga_edit' % url}">GA Edit</a>
            <a href="${python:'%s/ga_report' % url}">GA Report</a>
            <a tal:condition="python:'Manage' in roles" href="${python:'%s/authority_edit' % url}">AUTHORITY EDIT</a>
        </div>
    </div>
    <!-- 登入者為adminm -->
    <div tal:condition="identified" 
         tal:repeat="item brain" class="row">
        <div class="col-md-1">${repeat/item/number}</div>
        <div class="col-md-5">${item/Title}</div>
        <div class="col-md-6">
            <a href="${python:'%s/custom_edit' % item.getURL()}">DFP Edit</a>
            <a href="${python:'%s/custom_report' % item.getURL()}">DFP Report</a>
            <a href="${python:'%s/ga_edit' % item.getURL()}">GA Edit</a>
            <a href="${python:'%s/ga_report' % item.getURL()}">GA Report</a>
            <a href="${python:'%s/authority_edit' % item.getURL()}">AUTHORITY EDIT</a>
        </div>
    </div>
</div>


</metal:block>
</metal:content-core>

</body>
</html>

