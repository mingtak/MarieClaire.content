<?python
        from plone import api
        url = api.portal.get().absolute_url()
?>
<script src="//apps.bdimg.com/libs/jquery/1.10.2/jquery.min.js"></script>
<script src="${url}/++plone++MarieClaire.content/check_box.js"></script>
<link rel="stylesheet" href="${url}/++plone++MarieClaire.content/custom.css" />
<body>
    <form action="do_add_content" class="add_content_form">
        <h1 class="add_content_header">新增客戶</h1>

        <input type="text" class="add_content_input" name="custom_title"
                placeholder="請輸入姓名" />

        <br/>
        <?python
            from plone import api
            context = api.content.find(context=api.portal.get(), portal_type='Advertisement')
            post_list = api.content.find(context=api.portal.get(), portal_type='Post')
        ?>
        <label class="margin_lr">請選擇貼文</label>
        <select name="web_site" class="add_content_input">
            <option  tal:repeat="post post_list" tal:content="post/Title"
                name="web_site" tal:attributes="value python:view.get_uid(post)"></option>
        </select>

        <div class="margin_lr">
        
            <label class="select_all_container">
                <input type="checkbox" name="" id="check_all" />全選
            </label>

            <br/><br/>

            <label tal:repeat="item context" class="add_custon_checkbox">
                <input type="checkbox" name="ads" tal:attributes="value python:view.get_uid(item)" 
                        class="vertical_mid"/>
                <span tal:content="item/Title"></span>
            </label>

        </div>
        <br/>
        
        <input type="text"  value="custom_list" class="hide" name="which_from" />
        <button type="submit" class="add_content_btn">送出</button>

    </form>
</body>