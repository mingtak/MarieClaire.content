<?python
        from plone import api
        url = api.portal.get().absolute_url()
?>
<script>
var PORTAL_URL = '${url}'
</script>

<script src="//apps.bdimg.com/libs/jquery/1.10.2/jquery.min.js"></script>
<script src="${url}/++plone++MarieClaire.content/alert_box.js"></script>
<script src="${url}/++plone++MarieClaire.content/trace.js"></script>
<link rel="stylesheet" href="${url}/++plone++MarieClaire.content/custom.css" />
<body>
    <div>
        <form action="add_event" class="form_custom">
            <input type="text" value="add_custom" name="goto" class="hide" />
            <button class="add_btn">新增</button>
        </form>
        

        <table id="event_table">
            <tr>
                <th>姓名</th>
                <th>廣告</th>
                <th>貼文</th>
                <th>功能</th>
            </tr>

            <tr tal:define="datas python:view.get_custom_data()"
                tal:repeat="data datas">
                <td tal:content="data/Title"></td>
                <td tal:define="ads_list python:view.get_ads_list(data)"
                    tal:content="ads_list"></td>
                <td tal:define="post_list python:view.get_post_list(data)"
                    tal:content="python:post_list[0]"></td>
                <td>
                    <form action="show_trace" class="form_custom">
                        <input type="text" name="ads" tal:define="ads_list python:view.get_ads_list(data)" 
                                tal:attributes="value ads_list" class="hide"/>
                        <input type="text" class="hide" tal:define="post_list python:view.get_post_list(data)"
                                tal:attributes="value python:post_list[1]" name="web_site"/>
                        <button type="submit" class="trace_btn" >追蹤</button>
                    </form>
                        <a tal:attributes="href string:${data/getURL}/edit" class="event_a edit_btn">
                            修改
                        </a>
                    <form action="delete_content">

                        <input type="text" value="custom_list" name="from" class="hide"/>
                        <input type="text" tal:attributes="value data/id" 
                            name="event_id" class="hide"/>

                        <span class="check_del_span">刪除</span>

                        <div class="check_box animate">
                            <div class="box_content">
                                <h1 class="center">確定要刪除<span tal:content="data/id" class="event_id"></span>嘛</h1>
                                <div class="center">
                                    <button type="submit" class="del_btn">確定</button>
                                    <span class="go_back">返回</span>
                                </div>
                            </div>
                        </div>
                    </form>
                    
                </td>
            </tr>
        </table>
    </div>
</body>
